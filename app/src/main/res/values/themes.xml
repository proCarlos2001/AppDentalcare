<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DentalCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--Status bar color-->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.DentalCare" parent="Base.Theme.DentalCare" />

    <!--Barra de NavegaciÃ³n-->
    <style name="Toolbar.White" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    
    <!-- Estilo personalizado para el DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#009E0F</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">?android:colorPrimary</item>
        <item name="android:calendarTextColor">#009E0F</item>
        <item name="android:yearListSelectorColor">#009E0F</item>
    </style>

    <!-- Estilo personalizado para el TimePickerDialog -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#009E0F</item>
        <item name="android:timePickerDialogTheme">@style/CustomTimePickerDialog</item>
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">#009E0F</item>
        <item name="android:numbersTextColor">#009E0F</item>
        <item name="android:amPmTextColor">#009E0F</item>
    </style>

</resources>